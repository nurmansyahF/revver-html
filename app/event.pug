      var calendar = new FullCalendar.Calendar(calendarEl, {
        timeZone: 'UTC',
        headerToolbar: {
          left: 'prev,next',
          center: 'title',
          right: ''
        },
        editable: true,
        dayMaxEvents: true, // when too many events in a day, show the popover
        events: 'https://fullcalendar.io/api/demo-feeds/events.json?overload-day'
      });

      calendar.render();
    });
