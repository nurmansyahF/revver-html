extends templates/layout.pug

block vars
  - var activepage = "leads";


block content
  .leads
    .container
      .page-title.text-center
        h1 Leads
      section.leads-overview
        h5 Leads Overview
        .row
          .col-md-6
            .progress
              .progress-bar.hot(role='progressbar' style='width: 80%' aria-valuenow='15' aria-valuemin='0' aria-valuemax='100')
              .progress-bar.cold(role='progressbar' style='width: 20%' aria-valuenow='30' aria-valuemin='0' aria-valuemax='100')

            .description
              .description-item
                .color(style="background-color: #2D9CDB;")
                span Cold
              .description-item
                .color(style="background-color: #F0A500;")
                span Warm
              .description-item
                .color(style="background-color: #CF7500")
                span Hot
              .description-item
                .color(style="background-color: #8FFF00;")
                span Converted

          .col-md-6
            .progress
              .progress-bar.hot(role='progressbar' style='width: 40%' aria-valuenow='15' aria-valuemin='0' aria-valuemax='100')
              .progress-bar.underaverage(role='progressbar' style='width: 60%' aria-valuenow='15' aria-valuemin='0' aria-valuemax='100')

            .description
              .description-item
                .color(style="background-color: #2D9CDB;")
                span Potential
              .description-item
                .color(style="background-color: #CF7500;")
                span Avarage
              .description-item
                .color(style="background-color: #A7A7A7")
                span Under Avarage

      section.leads-table
        table.table.table-striped.dataTable
          thead
            tr
              th(width="180") Image
              th Name
              th Location
              th Status
              th Score
              th Action
          tbody
            tr
              td
                .photo
                  img(src="images/photo-profile.png", alt="photo")
              td Nama Lengkap
              td Surabaya
              td Cold
              td Potential
              td Whatsapp
            tr
              td
                .photo
                  img(src="images/photo-profile.png", alt="photo")
              td Nama Lengkap
              td Jakarta
              td Cold
              td Potential
              td Whatsapp